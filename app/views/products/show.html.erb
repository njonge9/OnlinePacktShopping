<div class='page-header d-flex justify-content-between'>
  <h3><%= @product.name%></h3>
  <ul class='list-inline'>
    <li class='list-inline-item'><%= link_to 'Back', products_path, class: 'btn btn-default'%></li>
    <li class='list-inline-item'><%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-warning'%></li>
  </ul>
</div>

<%if notice%>
  <div class='alert alert-info'>
    <p id='notice'><%= notice%></p>
  </div>
<%end%>

<table class='table table-bordered'>
  <tr>
    <td>Name</td>
    <td><%= @product.name%></td>
  </tr>
  <tr>
    <td>Image</td>
    <td><img src=<%= asset_path @product.featImage%> class='img-responsive' width='400px' height='400px' alt=""></td>
  </tr>
  <tr>
    <td>Description</td>
    <td><%= @product.description%></td>
  </tr>
  <tr class='table-success'>
    <td>Price</td>
    <td><%= @product.price%></td>
  </tr>
</table>
